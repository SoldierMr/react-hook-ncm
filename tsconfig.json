{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "outDir": "./dist",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@img/*": ["src/assets/img/*"],
            "@views/*": ["src/views/*"],
            "@actions/*": ["src/actions/*"],
            "@reducers/*": ["src/reducers/*"],
            "@store": ["src/store"],
            "@hooks/*": ["src/hooks/*"],
            "@config": ["src/config"],
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "bower_modules"
    ]
}